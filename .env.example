# Wantok Environment Configuration
# Copy this file to .env and update the values

# Docker image to use (set by CI/CD, or override manually)
DOCKER_IMAGE=yourusername/wantok:latest

# Database path (inside container)
DATABASE_PATH=/data/wantok.db

# Server binding (use 0.0.0.0 for Docker)
HOST=0.0.0.0
PORT=8080

# Session secret - CHANGE THIS to a random string (at least 32 characters)
# Generate with: openssl rand -hex 32
SESSION_SECRET=change-me-to-a-random-secret-string

# Session lifetime in seconds (default: 3600 = 1 hour)
SESSION_MAX_AGE=3600

# Set to false for local HTTP development (default: true)
SECURE_COOKIES=true

# Domain for Caddy (for HTTPS certificate)
DOMAIN=wantok.example.com

# Base URL for email links (invitations and magic links)
# Must include protocol, e.g., https://wantok.example.com
BASE_URL=https://wantok.example.com

# Email Provider: "postmark" or "smtp" (auto-detected if not set)
EMAIL_PROVIDER=postmark

# Postmark Configuration
# Get your Server API Token from: https://account.postmarkapp.com/servers
POSTMARK_SERVER_TOKEN=your-postmark-server-token

# From address for emails (must be verified in Postmark)
EMAIL_FROM=noreply@example.com
